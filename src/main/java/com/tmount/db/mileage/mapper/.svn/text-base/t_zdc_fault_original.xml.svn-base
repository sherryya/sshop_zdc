      <select id="selectFaultCode" resultMap="BaseResultMap1" parameterType="com.tmount.db.mileage.dto.TZdcFaultCodeLog">
 <!--  SELECT a.*,b.`FAULT_DES`,b.`DEAL_SUG` FROM `t_zdc_fault_code_log`  
  a INNER JOIN `t_zdc_fault_code` b ON a.`HEX_CODE`=b.`HEX_CODE` 
  WHERE deviceid= #{deviceid,jdbcType=VARCHAR}  AND fault_clear=0 -->
  
    SELECT a.*,
  CONCAT(IFNULL( b.`FAULT_DES`,'未知故障'),CONCAT('-',a.`HEX_CODE`))
   FAULT_DES
   ,b.`DEAL_SUG` FROM `t_zdc_fault_code_log`  
  a LEFT JOIN `t_zdc_fault_code` b ON a.`HEX_CODE`=b.`HEX_CODE` 
  WHERE deviceid= #{deviceid,jdbcType=VARCHAR}   AND fault_clear=0
  </select>

  <update id="updateByPrimaryKey" parameterType="com.tmount.db.mileage.dto.TZdcFaultCodeLog">
