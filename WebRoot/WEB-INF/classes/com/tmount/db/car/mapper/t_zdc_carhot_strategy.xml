<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tmount.db.car.dao.TZdcCarhotStrategyMapper" >
  <resultMap id="BaseResultMap" type="com.tmount.db.car.dto.TZdcCarhotStrategy" >
    <result column="device_id" property="deviceId" jdbcType="VARCHAR" />
    <result column="strategy_type" property="strategyType" jdbcType="VARCHAR" />
    <result column="strategy_value" property="strategyValue" jdbcType="VARCHAR" />
    <result column="is_use" property="is_use" jdbcType="INTEGER" />
  </resultMap>
  <sql id="Base_Column_List" >
    device_id,strategy_type,strategy_value,is_use
  </sql>
  
  <select id="selectStrategyCount" resultType="java.lang.Integer" parameterType="java.lang.String">
  	select count(device_id) from t_zdc_carhot_strategy where device_id=#{id,jdbcType=VARCHAR}
  </select>
  <select id="selectStrategyInfo" resultMap="BaseResultMap" parameterType="java.lang.String">
  	select <include refid="Base_Column_List"/> from t_zdc_carhot_strategy where device_id=#{device_id,jdbcType=VARCHAR}
  </select>
  
  <insert id="saveCarHotStrategy" parameterType="com.tmount.db.car.dto.TZdcCarhotStrategy">
    insert into t_zdc_carhot_strategy (
        device_id,strategy_type,strategy_value,is_use)
    values (
       	#{deviceId,jdbcType=VARCHAR},#{strategyType,jdbcType=VARCHAR},#{strategyValue,jdbcType=VARCHAR},#{is_use,jdbcType=INTEGER}
    )
  </insert>
  
  <update id="updateCarHotStrategy" parameterType="com.tmount.db.car.dto.TZdcCarhotStrategy">
    	UPDATE `t_zdc_carhot_strategy` SET
		strategy_type=#{strategyType,jdbcType=VARCHAR},
		strategy_value=#{strategyValue,jdbcType=VARCHAR},
		is_use=#{is_use,jdbcType=INTEGER}
		WHERE device_id=#{deviceId,jdbcType=VARCHAR}
  </update>
   <update id="updateCarHotStatus" parameterType="com.tmount.db.car.dto.TZdcCarhotStrategy">
    	UPDATE `t_zdc_carhot_strategy` SET
		is_use=#{is_use,jdbcType=INTEGER}
		WHERE device_id=#{deviceId,jdbcType=VARCHAR}
  </update>

</mapper>
