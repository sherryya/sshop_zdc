<?xml version="1.0" encoding="UTF-8" ?>    
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Console output -->

	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %d{MM-dd HH:mm:ss} %m  (%F:%L) \n" />
		</layout>
	</appender>
	<appender name="ControllerBaseStatis" class="org.apache.log4j.DailyRollingFileAppender">  
		<param name="File" value="e:/ControllerBaseStatis.log"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %d{MM-dd HH:mm:ss} %m  (%F:%L) \n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMax" value="debug" />
			<param name="AcceptOnMatch" value="true" />
		</filter>
	</appender>
	<category name="java.sql">
		<priority value="debug" />
	</category>
	<category name="com.ibatis">
		<priority value="debug" />
	</category>
	<category name="com.tmount.util.ControllerBase">
		<priority value="debug" />
		<appender-ref ref="ControllerBaseStatis"/>
	</category>
	<root>
		<priority value="debug" />
		<appender-ref ref="STDOUT" />
	</root>

</log4j:configuration>    
